generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id
  email         String   @unique
  username      String   @unique
  password_hash String
  registeredAt  DateTime @default(now())

  maingrid String
  navbar   String
  footer   String

  defaultLight String
  defaultDark  String

  posts    Post[]
  sessions Session[]
}

model Grid {
  id         String @id
  comp_one   String
  comp_two   String
  comp_three String
  comp_four  String
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Post {
  slug            String   @id
  opengraphimage  String
  title           String
  content         String
  updatedAt       DateTime @default(now())
  metaDescription String?
  metaKeywords    String[]
  views           Int      @default(0)
  visibility      Boolean  @default(true)

  author   User   @relation(fields: [authorId], references: [id])
  authorId String

  tags Tag[]
}

model Tag {
  tagname String @id
  posts   Post[]
}
